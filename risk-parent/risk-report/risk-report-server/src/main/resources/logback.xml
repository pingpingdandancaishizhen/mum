<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>
<configuration debug="false" scan="false">
    <contextName>${project.name}</contextName>
    <Property name="log.base" value="${server.home}/logs" />
    <Property name="log.name" value="${project.name}" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-5level [%contextName] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log.base}/${log.name}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${log.base}/${log.name}-log-%d{yyyy-MM-dd}.%i.zip</FileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-5level [%contextName] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <File>${log.base}/${log.name}-err.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${log.base}/${log.name}-log-%d{yyyy-MM-dd}.%i.zip</FileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-5level [%contextName] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <appender-ref ref="FILE" />
    </appender>
    
    <appender name="ASYNC-ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>128</queueSize>
        <appender-ref ref="FILE-ERROR" />
    </appender>
    
    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
		<syslogHost>10.156.243.57</syslogHost>
		<facility>LOCAL2</facility>
		<suffixPattern>tag-risk-report-server %-5level [%thread] %logger %msg</suffixPattern>
	</appender>
	
	<appender name="SYSLOG-ASYNC" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="SYSLOG" />
	</appender>
	
	<appender name="LOGSTASH" class="com.cwbase.logback.RedisAppender">
		<type>risk</type>
		<tags>tag-risk-report-server</tags>
		<host>10.156.243.57</host>
		<port>6379</port>
		<key>logstash-list</key>
		 <password>log123tgh</password>
	</appender>
	
	<appender name="LOGSTASH-ASYNC" class="ch.qos.logback.classic.AsyncAppender">
    	<appender-ref ref="LOGSTASH" />
	</appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ASYNC" />
        <appender-ref ref="ASYNC-ERROR" />
        <appender-ref ref="SYSLOG-ASYNC" />
        <appender-ref ref="LOGSTASH-ASYNC" />
    </root>

    <logger name="org.springframework" additivity="true" level="${log.spring.level}" />
    <logger name="org.mybatis.spring" additivity="true" level="INFO" />
    <logger name="java.sql" additivity="true" level="INFO" />
    <logger name="com.mchange.v2" additivity="true" level="ERROR" />
    
</configuration>
