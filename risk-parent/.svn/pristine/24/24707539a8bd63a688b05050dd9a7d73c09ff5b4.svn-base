<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.sunfit.risk.credit.server.dao.NFCSCreditDAO" >
  <resultMap id="BaseResultMap" type="cn.sunfit.risk.credit.api.beans.NFCSCredit" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="idcard" property="idcard" jdbcType="VARCHAR" />
    <result column="plate" property="plate" jdbcType="VARCHAR" />
    <result column="query_time" property="queryTime" jdbcType="TIMESTAMP" />
    <result column="result" property="result" jdbcType="LONGVARBINARY" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, name, idcard, plate, query_time, result
  </sql>
  <select id="selectCreditResultCurDate" resultMap="BaseResultMap" parameterType="cn.sunfit.risk.credit.api.beans.NFCSCredit" >
    select 
    <include refid="Base_Column_List" />
    from risk_nfcs_credit
    where name = #{name,jdbcType=VARCHAR} 
    and idcard = #{idcard,jdbcType=VARCHAR}
    and plate = #{plate,jdbcType=VARCHAR}
    and DATE(query_time) = CURDATE()
    LIMIT 0, 1 
  </select>
  
  <insert id="insert" parameterType="cn.sunfit.risk.credit.api.beans.NFCSCredit" >
    insert into risk_nfcs_credit (id, name, idcard, 
      plate, query_time, result
      )
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{idcard,jdbcType=VARCHAR}, 
      #{plate,jdbcType=VARCHAR}, #{queryTime,jdbcType=TIMESTAMP}, #{result,jdbcType=LONGVARBINARY}
      )
  </insert>
</mapper>