    }
}
.modal-dialog{
    position: absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    margin:auto;
    max-height:720px;
    .modal-body{
        max-height:600px;
        overflow: auto;
    }
}
@media (max-width: 1366px)  {
    .modal-dialog{
        max-height:500px;
    }
    .modal-dialog .modal-body{
        max-height:400px;
    }
    .table.table-hover{
        min-width: 1500px;
    }

}
