<%@ page language="java" contentType="text/html;charset=UTF-8"
	pageEncoding="UTF-8"%>
<div class="tab-pane" id="userinfo">
	<form onsubmit="return false;"  class="form-inline form-label-auto" id="userinfoForm" action="${ctx}/system/user/changeUser" method="post">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="corpName" class="label-head label-head-llg text-right"><span>企业名称：</span></label>
						<input type="hidden" disabled="disabled" class="form-control" id="corpName"	name="corpName">
						<div class="label-box">
							<span id="corpNameSpan"></span>
						</div>
					</div>
				</div>

				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="corpName" class="label-head label-head-llg text-right"><span>登录名：</span></label>
						<div class="label-box">
							<span id="userAccountSpan"></span>
						</div>
						<input type="hidden" disabled="disabled" class="form-control" id="userAccount" name="userAccount">
					</div>

				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="userName" class="label-head label-head-llg text-right"><span>真实姓名：</span></label>
						<input type="text" maxlength="20"  class="form-control" id="userName" name="userName">
					</div>

				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="deptName" class="label-head label-head-llg text-right">所属机构：</label>
						<div class="label-box">
							<span id="deptNameSpan"></span>
							<input type="hidden" disabled="disabled" class="form-control" id="deptName" name="deptName">
						</div>
					</div>

				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="roleNames" class="label-head label-head-llg text-right">角色：</label>
						<div class="label-box">
							<span id="roleNamesSpan"></span>
							<input type="hidden" disabled="disabled" class="form-control" id="roleNames" name="roleNames">
						</div>
					</div>
				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="job" class="label-head label-head-llg text-right">职称：</label>
						<input type="text" maxlength="20" class="form-control" id="job" name="job">
					</div>

				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="telephone" class="label-head label-head-llg text-right">
							<span class="require">手机号码：</span>
						</label>
						<input type="text" maxlength="11" class="form-control" id="telephone" name="telephone">
					</div>
				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="email" class="label-head label-head-llg text-right">Email：</label>
						<input type="text" class="form-control" id="email" name="email">
					</div>

				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="idcard" class="label-head label-head-llg text-right">身份证号码：</label>
						<input type="text"  maxlength="18" class="form-control" id="idcard" name="idcard">
					</div>
				</div>
				<div class="col-sm-12">
					<div class="input-group form-group">
						<label for="desc" class="label-head label-head-llg text-right label-head-top">个人简介：</label>
						<textarea class="form-control" maxlength="100" rows="3" id="desc" name="desc"></textarea>
					</div>

				</div>
				<div class="col-md-12 text-center">
					<input type="submit" id="userinfomodifyb" class="btn btn-primary btn-primary-lg" value="修改"/>
				</div>
			</div>

		</div>
	</form>
</div>
<script type="text/javascript" src="${ctx}/static/pagejs/index/userinfo.js${timeStyle}"></script>
