<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.sunfit.risk.buz.server.dao.system.CarModelDAO" >
  <resultMap id="BaseResultMap" type="cn.sunfit.risk.buz.api.beans.system.CarModel" >
    <result column="model_id" property="modelId" jdbcType="INTEGER" />
    <result column="series_id" property="seriesId" jdbcType="INTEGER" />
    <result column="model_name" property="modelName" jdbcType="VARCHAR" />
    <result column="show_order" property="showOrder" jdbcType="INTEGER" />
    <result column="year" property="year" jdbcType="INTEGER" />
  </resultMap>
  
  <select id="selectAllCarModel" resultMap="BaseResultMap">
  	select model_id, series_id, model_name, 
      show_order, year from 
      risk_car_model 
      order by series_id ASC
  </select>
</mapper>