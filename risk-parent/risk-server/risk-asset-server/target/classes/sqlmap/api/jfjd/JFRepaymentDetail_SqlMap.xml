<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.sunfit.risk.buz.server.dao.api.jfjd.JFRepaymentDetailDAO" >
  <resultMap id="BaseResultMap" type="cn.sunfit.risk.buz.api.beans.api.jfjd.JFRepayment" >
    <result column="issue" property="issue" />
    <result column="issue_date" property="repayDate" />
    <result column="repay_amount" property="repayAmount" />
    <result column="is_finish" property="isFinish" />
  </resultMap>
  
  <select id="getRepayDetailByBp" parameterType="cn.sunfit.risk.buz.api.vo.api.jfjd.JFRepayDetailQueryReq" resultMap="BaseResultMap">
  	SELECT issue,issue_date,(interest+principle+manage_fee+extra_fee+extra_fee_2) repay_amount,is_finish
  	FROM ${domain}_repayment_detail
  	WHERE bp_no = #{bpId}
  	ORDER BY issue ASC;
  </select>
</mapper>